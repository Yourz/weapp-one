.vol-card {
  padding: 20rpx;
  margin: 25rpx;
  border: 1px solid #ebebeb;
  border-radius: 3px;
  box-shadow: 1px 1px 1px #ebebeb;
}

.vol-picture {
  width: 100%;
}

.vol-meta {
  padding: 10rpx 5rpx;
  font-size: 20rpx;
  color: #888;
}

.vol-author {
  float: right;
}

.vol-content {
  margin-top: 30rpx;
  padding: 0 5rpx;
  font-size: 28rpx;
  line-height: 1.4;
}

.vol-content-text {
  width: 100%;
  height: 200rpx;
  display: inline-block;
}

.vol-makettime {
  font-size: 24rpx;
  color:  #888;
  text-align: right;  
}

.article-card {
  margin: 50rpx;
}
.article-title {
  display: inline-block;
  font-size: 48rpx;
  padding-bottom: 36rpx;
  padding-right: 28rpx;
  margin-bottom: 36rpx;
  border-bottom: 5rpx solid #000;
}
.article-author {
  display: block;
  font-size: 28rpx;
}
.article-content {
  margin-top: 200rpx;
  font-size: 30rpx;
  line-height: 1.5;
}
.question-asker {
  font-size: 28rpx;
}
.question-content {
  margin-top: 80rpx;
  font-size: 24rpx;
  line-height: 1.5;
}
.question-content-text {
  display: block;
  margin-bottom: 30rpx;
  padding-bottom: 30rpx;
  border-bottom: 1px dashed #ebebeb;
}
.question-answerer {
  display: block;
  text-indent: 20rpx;
  margin-bottom: 30rpx;
}
.music-info {
  font-size: 20rpx;
  color: #999;
  text-align: center;
  line-height: 1.4;
  margin-bottom: 36rpx;
}
.music-info text {
  display: block;
}
.music-title {
  display: block;
  font-size: 48rpx;
  margin-bottom: 36rpx;
}
.music-author {
  display: block;
  text-align: center;
  color:  #888;
  font-size: 28rpx;
  margin-bottom: 36rpx;
}
.music-content {
  font-size: 30rpx;
  line-height: 1.5;
}