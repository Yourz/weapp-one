.monthly {
  padding-top: 10px;
  padding-left: 10px;
}

.vol-card {
  width: calc(50% - 12px);
  display: inline-block;
  margin-right: 10px;
  margin-bottom: 10px;
  border: 1px solid #ebebeb;
}

.vol-header {
  width: 100%;
  height: 300rpx;
  position: relative;
}

.vol-cover {
  width: 100%;
  height: 300rpx;
}

.vol-data {
  width: 100%;
  position: absolute;
  bottom: 0;
  padding: 3px 5px;
  color: #fff;
  font-size: 12px;
  font-weight: 200;
  box-sizing: border-box;
  background-color: rgba(0, 0, 0, 0.3);
}

.vol-makettime {
  float: right;
}

.vol-desc {
  padding: 5px 3px;
}

.vol-content {
  font-size: 12px;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.article-card {
  width: calc(100% - 10px);
  margin-right: 10px;
  height: 140rpx;
  display: flex;
  flex-direction: column;
  margin-bottom: 60rpx;
}
.article-card::last-child {
  margin-bottom: 0;
}
.article-card text {
  display: block;
}

.article-header {
  flex: 1.2;
}

.article-header::after {
  content: '';
  clear: both;
  display: block;
  overflow: hidden;
}
.article-title {
  float: left;
  font-size: 32rpx;
  width: calc(100% - 54rpx)
}
.article-btn {
  float: right;
  color: #008cff;
  border: 1rpx solid #008cff;
  border-radius: 5rpx;
  width: 50rpx;
  height: 32rpx;
  font-size: 24rpx;
}
.article-author, .article-content {
  font-size:24rpx;
  flex:1;
}

.music-card {
  margin-right: 10px;
  width: calc(100% - 10px);
  display: flex;
  padding: 10px 0;
  border-bottom: 1px solid #f1f1f1;
}
.music-card:last-child {
  padding-top: 0;
}
.music-cover {
  height:100rpx;
  width:150rpx;
}
.music-data {
  display:flex;
  flex-direction:column;
  justify-content:space-around;
}
.music-title {
  display: block;
  font-size: 28rpx;
  color: #888;
}
.music-author {
  display: block;
  font-size: 32rpx;
}