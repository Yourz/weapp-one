/**index.wxss**/
.vol-swiper {
  height: 100%;
}

.vol-swiper-item {
  box-sizing: border-box;
}

.vol-card {
  height: 100vh;
  background-color: #fff; 
  position: relative;
}

.vol-picture {
  width: 100%;
  position: relative;
}
.vol-number {
  position: absolute;
  color: #fff;
  left: 10rpx;
  top: 10rpx;
  font-size: 20rpx;
  text-shadow: 0 0 5rpx #000;
}
.vol-meta {
  text-align: center;
}

.vol-author {
  color: #ccc;
  font-size: 20rpx;
}

.vol-content {
  padding: 0 50rpx;
  font-size: 25rpx;
  line-height: 1.4;
  position: absolute;
  bottom: 200rpx;
}

.vol-content-text, .vol-content-quote {
  width: 100%;
  display: block;
}
.vol-content-quote {
  margin-top: 10rpx;
  text-align: center;
  color: #ccc;
  font-size: 20rpx;
}

.vol-makettime {
  font-size: 12px;
  color:  #888;
  text-align: right;  
}
